# https://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{kt,kts}]
indent_style = space
indent_size = 2
max_line_length = 120
ij_kotlin_align_multiline_parameters = true
ij_kotlin_brace_style = end_of_line
ij_kotlin_allow_trailing_comma = false
ij_kotlin_allow_trailing_comma_on_call_site = false

# Ktlint configuration
ktlint_standard_function-naming = disabled
ktlint_standard_filename = disabled
ktlint_experimental_compose-parameter-order = disabled
# ktlint_standard_trailing-comma-on-call-site = disabled # Handled by ij_kotlin_allow_trailing_comma_on_call_site
# ktlint_standard_trailing-comma-on-declaration-site = disabled # Handled by ij_kotlin_allow_trailing_comma
